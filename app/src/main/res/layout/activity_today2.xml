<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                 android:fitsSystemWindows="true"
                 android:clipToPadding="true">



        <android.support.v4.view.ViewPager
            android:background="#000"
            android:layout_centerVertical="true"
            android:id="@+id/today2_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:background="#99000000"
            android:padding="10dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/today2_container"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/today2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重庆机场一晚两次遭无人机干扰 上万游客被困"/>

                <TextView
                    android:textColor="#fff"
                    android:layout_alignParentRight="true"
                    android:text="1/8"
                    android:id="@+id/today2_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <TextView
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="根据相关实验，一只重1.8千克的鸟与一架高速飞行的飞机相撞，产生的冲击力比炮弹还大。一般消费级无人机的重量为1.5千克至150千克，通常由质地坚硬的材料制成，无人机若与高速飞行的飞机相撞，严重的可能造成机毁人亡的惨剧。另外还可能危害地面人身财产安全等。（来源：网易综合）"
                android:id="@+id/today2_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/today2_back"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/actionbar_back"/>

        <ImageView
            android:id="@+id/today2_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/actionbar_more"
            android:layout_gravity="right"
            android:layout_margin="5dp"/>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </FrameLayout>
</layout>
