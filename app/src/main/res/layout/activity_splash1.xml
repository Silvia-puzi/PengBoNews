<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <RelativeLayout
        android:fitsSystemWindows="true"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/splash_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/splash03"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_marginBottom="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/splash_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/appicon"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:id="@+id/splash_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓬勃新闻"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/splash_icon"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="made by sliviaPY"
                android:layout_toRightOf="@+id/splash_icon"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/splash_name"
                android:layout_marginTop="3dp"
                android:textColor="#000"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/splash_jump"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:text="点击跳过"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_splash_btn"/>

    </RelativeLayout>
</layout>
